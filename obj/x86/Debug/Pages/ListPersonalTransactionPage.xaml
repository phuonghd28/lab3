        <TextBlock x:ConnectionId='4' x:Name="btnName" HorizontalAlignment="Left" Margin="884,304,0,0" Text="Waiting" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="497"/>
        <TextBlock HorizontalAlignment="Left" Margin="708,363,0,0" Text="Description: " TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="106"/>
        <TextBlock x:ConnectionId='5' x:Name="btnDescription" HorizontalAlignment="Left" Margin="884,363,0,0" Text="Waiting" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="497"/>
        <TextBlock HorizontalAlignment="Left" Margin="750,416,0,0" Text="Money: " TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="84"/>
        <TextBlock x:ConnectionId='6' x:Name="btnMoney" HorizontalAlignment="Left" Margin="884,416,0,0" Text="Waiting" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="497"/>
        <TextBlock HorizontalAlignment="Left" Margin="750,416,0,0" Text="Money: " TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="84"/>
