    xmlns:Custom="using:Microsoft.Toolkit.Uwp.UI.Controls"
    x:Class="Lab3.Pages.ListPersonalTransactionPage"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
