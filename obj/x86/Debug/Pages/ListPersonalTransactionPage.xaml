        <TextBlock x:ConnectionId='7' x:Name="btnCreatedDate" HorizontalAlignment="Left" Margin="884,468,0,0" Text="Waiting" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="497"/>
        <TextBlock x:ConnectionId='8' x:Name="btnCategory" HorizontalAlignment="Left" Margin="884,537,0,0" Text="Waiting" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="497"/>
        <TextBlock HorizontalAlignment="Left" Margin="750,537,0,0" Text="Category: " TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="84"/>
        <TextBox x:ConnectionId='9' x:Name="searchCategory" HorizontalAlignment="Left" Margin="53,58,0,0" Header="Search Category" TextWrapping="Wrap" VerticalAlignment="Top" Width="134"/>
        <Button x:ConnectionId='10' Content="Find by Category" Margin="53,142,0,0" VerticalAlignment="Top" Width="134"                       />
        <Button x:ConnectionId='11' Content="Reset" Margin="240,665,0,0" VerticalAlignment="Top"                  />
        <DatePicker x:ConnectionId='12' x:Name="startDate" Header="Start Date" DayFormat="{}{day.integer}" MonthFormat="{}{month.integer}" YearFormat="{}{year.abbreviated}" Margin="267,15,0,0" VerticalAlignment="Top"/>
        <DatePicker x:ConnectionId='13' x:Name="endDate" Header="End Date" DayFormat="{}{day.integer}" MonthFormat="{}{month.integer}" YearFormat="{}{year.abbreviated}" Margin="267,71,0,0" VerticalAlignment="Top"/>
        <Button x:ConnectionId='14' Content="Find by start date to end date" Margin="267,142,0,0" VerticalAlignment="Top" Width="267"                                  />
        <TextBlock HorizontalAlignment="Left" Margin="56,525,0,0" Text="Total: " TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="84"/>
        <TextBlock x:ConnectionId='15' x:Name="btnTotalMoney" HorizontalAlignment="Left" Margin="172,525,0,0" Text="Waiting" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="84"/>
